<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp" >
        <ImageView
            android:id="@+id/areaRowImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/areaRowFamousNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Famous Area Name"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/areaRowFamousCityNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Famous Area City Name"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="6dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/areaRowFamousSpendMoneyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area Possible You Can Spend Amount"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="6dp"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/areaRowFamousWhyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Famous Area Why is That"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="6dp"
        android:textSize="16sp" />

</LinearLayout>